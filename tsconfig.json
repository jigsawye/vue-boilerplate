{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2015"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
